	/*}*/
protected:
	/*{*/
	void on_key_press ( wxKeyEvent & );
	/*}*/
private:
	/*{*/
	HEvtHandler ( const HEvtHandler & );
	HEvtHandler & operator = ( const HEvtHandler & );
	DECLARE_EVENT_TABLE ( );
	/*}*/
	};

